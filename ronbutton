<script>
  const btn = document.getElementById('ronbutton');
  const dialogo = document.getElementById('dialogo');
  const input = document.getElementById('inputPregunta');
  const respuestaContainer = document.getElementById('respuestaContainer');

  btn.onclick = () => {
    dialogo.style.display = dialogo.style.display === 'none' ? 'block' : 'none';
    input.focus();
  };

  input.addEventListener('keypress', function (e) {
    if (e.key === 'Enter') {
      const pregunta = input.value.trim();
      if (pregunta !== '') {
        mostrarRespuesta(pregunta);
        input.value = '';
      }
    }
  });

  function mostrarRespuesta(pregunta) {
    const lower = pregunta.toLowerCase();
    let respuesta = '';
    let versiculo = '';

    if (lower.includes('no doy m√°s') || lower.includes('agotado') || lower.includes('estoy cansado')) {
      respuesta = 'Lo s√©. Te pesa todo encima y no te alcanza el alma. Pero no est√°s solo, ni derrotado. Solo necesit√°s aflojar un rato y que alguien te vea de verdad.';
      versiculo = '‚ÄúVenid a m√≠ todos los que est√°is trabajados y cargados, y yo os har√© descansar.‚Äù (Mateo 11:28)';
    } else if (lower.includes('no me alcanza la plata')) {
      respuesta = 'No es culpa tuya si el mundo est√° hecho para que corras y no llegues. No te tragues la culpa: esto es sistema, no fracaso personal.';
      versiculo = '‚ÄúMi Dios, pues, suplir√° todo lo que os falta conforme a sus riquezas en gloria en Cristo Jes√∫s.‚Äù (Filipenses 4:19)';
    } else if (lower.includes('mi familia') || lower.includes('mis hijos')) {
      respuesta = 'Tu amor por ellos no se mide en plata ni en resultados. Ellos te miran y ven fuerza, aunque vos te sientas roto.';
      versiculo = '‚ÄúInstruye al ni√±o en su camino, y aun cuando fuere viejo no se apartar√° de √©l.‚Äù (Proverbios 22:6)';
    } else {
      respuesta = 'No tengo todas las respuestas. Pero si llegaste hasta este bot√≥n, es porque algo adentro tuyo todav√≠a quiere seguir.';
      versiculo = '‚ÄúEl Se√±or est√° cerca de los quebrantados de coraz√≥n; y salva a los contritos de esp√≠ritu.‚Äù (Salmo 34:18)';
    }

    const block = document.createElement('div');
    block.className = 'respuesta';
    block.innerHTML = `
      <div>${respuesta}</div>
